{
  "family": "stock-trading-server-task",
  "executionRoleArn": "arn:aws:iam::619071337600:role/ecsTaskExecutionRole",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "cpu": "512",
  "memory": "471",
  "containerDefinitions": [
    {
      "name": "stock-trading-server-container",
      "image": "619071337600.dkr.ecr.ap-northeast-2.amazonaws.com/stock-trading-server:latest",
      "cpu": 512,
      "memory": 471,
      "memoryReservation": 471,
      "essential": true,
      "portMappings": [
        {
          "name": "stock-trading-server-container-8080-tcp",
          "containerPort": 8080,
          "hostPort": 0,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [
        {
          "name": "TZ",
          "value": "Asia/Seoul"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/stock-trading-server-task",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
