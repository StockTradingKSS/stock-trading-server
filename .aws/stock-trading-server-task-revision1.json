{
  "family": "stock-trading-server-task",
  "executionRoleArn": "arn:aws:iam::619071337600:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::619071337600:role/ecs-task-role-stock-trading",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "cpu": "512",
  "containerDefinitions": [
    {
      "name": "stock-trading-server-container",
      "image": "619071337600.dkr.ecr.ap-northeast-2.amazonaws.com/stock-trading-server:latest",
      "cpu": 256,
      "memoryReservation": 600,
      "memory": 800,
      "essential": true,
      "portMappings": [
        {
          "name": "stock-trading-server-container-8080-tcp",
          "containerPort": 8080,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "TZ",
          "value": "Asia/Seoul"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-northeast-2"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/stock-trading-server-task",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/api/stock-trading/v1/health-check || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 180
      }
    }
  ]
}
